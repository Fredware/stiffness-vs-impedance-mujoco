<mujoco model="hello_world_scene">
  <!-- 
    State-of-the-Art MJCF Header 
    - autolimits: automatically limits joints based on range
    - visual/statistic: useful for rendering quality
  -->
  <compiler angle="degree" meshdir="assets" autolimits="true"/>
  
  <option timestep="0.002" integrator="RK4">
    <flag warmstart="enable"/>
  </option>

  <!-- Visual settings for a clean, professional look -->
  <visual>
    <headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0 0 0"/>
    <rgba haze="0.15 0.25 0.35 1"/>
    <global azimuth="150" elevation="-20"/>
  </visual>

  <statistic center="0 0 0.7" extent="0.8"/>

  <worldbody>
    <!-- A checkerboard floor -->
    <geom name="floor" type="plane" size="0 0 .05" material="grid"/>
    <light pos="0 0 1.5" dir="0 0 -1" directional="true"/>

    <!-- A simple robot arm base (static) -->
    <body name="base" pos="0 0 0">
      <geom type="cylinder" size=".05 .05" rgba=".5 .5 .5 1"/>
      
      <!-- Link 1 -->
      <body name="link1" pos="0 0 .1">
        <joint name="joint1" type="hinge" axis="0 0 1" range="-180 180" damping="1.0"/>
        <geom type="capsule" fromto="0 0 0 0.3 0 0" size=".03" rgba=".8 .2 .2 1"/>
        
        <!-- Link 2 -->
        <body name="link2" pos="0.3 0 0">
            <joint name="joint2" type="hinge" axis="0 1 0" range="-90 90" damping="1.0"/>
            <geom type="capsule" fromto="0 0 0 0.3 0 0" size=".03" rgba=".2 .8 .2 1"/>
            
            <!-- End Effector / Peg -->
            <body name="ee" pos="0.3 0 0">
                <geom type="cylinder" size=".02 .05" rgba=".2 .2 .8 1" pos="0 0 -0.05"/>
                <site name="tip" pos="0 0 -0.1" size="0.01" rgba="1 1 0 1"/>
            </body>
        </body>
      </body>
    </body>
  </worldbody>

  <!-- 
    ACTUATORS: This maps data.ctrl inputs to forces on joints.
    We use 'motor' for direct torque control, which is required for
    implementing custom Impedance/Stiffness controllers in Python.
  -->
  <actuator>
    <motor name="motor1" joint="joint1" gear="1"/>
    <motor name="motor2" joint="joint2" gear="1"/>
  </actuator>

  <asset>
    <texture type="2d" name="grid" builtin="checker" rgb1=".1 .2 .3" rgb2=".2 .3 .4" width="300" height="300" mark="edge" markrgb=".8 .8 .8"/>
    <material name="grid" texture="grid" texrepeat="2 2" texuniform="true" reflectance=".2"/>
  </asset>
</mujoco>